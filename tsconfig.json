{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es5",
      "es2015",
      "dom"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "@exogroup/*": [
        "dist/@exogroup/*"
      ],
      "@exogroup/color-picker": [
        "dist/@exogroup/color-picker"
      ],
      "@exogroup/color-picker/*": [
        "dist/@exogroup/color-picker/*"
      ],
      "@exogroup/datetime-picker": [
        "dist/@exogroup/datetime-picker"
      ],
      "@exogroup/datetime-picker/*": [
        "dist/@exogroup/datetime-picker/*"
      ],
      "file-input": [
        "dist/file-input"
      ],
      "file-input/*": [
        "dist/file-input/*"
      ]
    },
    "useDefineForClassFields": false
  }
}
